<resources>
    <!-- Base application theme. -->
    <style name="Theme.SenderOfCatsAndDucks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>  <!-- @color/teal_200 -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/purple_700</item>
        <item name="buttonStyle">@style/MainButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>